.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
  padding: 10px;
} 
.userinfo-block{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.user-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow:hidden;
  object-fit: cover;
  display: block;
  margin: 0px 20px;
}

.userinfo-block-right{
  width: 70%;
}
.user-nickname{
  margin-top: 2px;
  width: 80%;
  letter-spacing: 1px;
  font-weight: bold;
  text-align: left;
}
.user-setting{
  width: 32px;
  height: 32px;
}
.userinfo-block-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.userinfo-block-title{
  width: 100px;
}
.userinfo-block-value{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}
.userinfo-block-unit{
  font-size: 14px;
  margin-left: 2px;
}

/**
* 用户数据
**/
.navigate-userdata-block{
  margin-top: 10px;
  width: 100%;
}
.navigate-bar-block{
  height: 55rpx;
  border-right: none;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}
.navigate-bar-data{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
}
.navigate-item{
  width: 100px;
  text-align: center;
  height: 55rpx;
  line-height: 55rpx;
  border: 1px solid #40d07f;
}
.navigate-item-left{
  
}
.navigate-item-right{
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.cur-navigate-item{
  background-color: #40d07f;
  color: #FFFFFF;
}
.mystep-data-block{
  margin-left: 5px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 30px;
}
.data-item-block{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  color: #313131;
  font-size: 14px;
}

.mystep-data-block-2{
  margin-left: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 30px;
}
.mystep-data-block-2left{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex: 1;
}

.resign-btn{
  color: #FFF;
  background-color: #ff7e38;
  border-radius: 5px;
  border: 1px solid #ff7e38;
  text-align: center;
  height: 30px;
  line-height: 30px;
  margin-top: 18px;
  font-size: 14px;
  padding-left: 10px;
  padding-right: 10px;
}

/**
* 分享
**/
.share-friend-image{
  height: 55rpx;
  width: 260rpx;
  border: 1px solid #40d07f;
  border-radius: 5px;
  background-color: #40d07f;
}
/**
* 补签
*/
.re-sign-btn{
  margin:0px;
  height: 55rpx;
  line-height: 55rpx;
  background-color: #40d07f;
  color: #FFFFFF;
  font-size: 16px;
}

/**
*日历
**/
.calendar-content-block{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.calendar-block-week{
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items: center;
  height: 35px;
  line-height: 35px;
  background-color: #e3e3e3;
}
.calendar-weekday{
  width: 14.25%;
  height: 35px;
  line-height: 35px;
  text-align: center;
  font-size: 18px;
}

.calendar-block{
  width: 100%;
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10px;
}
.calendar-day-item{
  width: 14.25%;
  height: 50px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-bottom: 10px;
}
.calendar-day{
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
}
.calendar-day-step{
  width: 100%;
  font-size: 12px;
  text-align: center;
  color: #ff7e38;
  margin-top: -4px;
}

.curdate-block{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}
.nav-btn-image{
  width: 70rpx;
  height: 70rpx;
  background-color: #40d07f;
  border-radius: 50%;
}
.nav-text{
  height: 70rpx;
  line-height: 70rpx;
  margin: 0px 25px;
  font-size: 20px;
  text-align: center;
}

.color-red{
  color: #ff7e38;
}

.hidden-next{
  visibility: hidden;
}

/*弹出层样式*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  overflow: hidden;  
  background-color: #a1a1a1;
}
.drawer_box {  
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content:center;
  overflow: hidden;  
  position: fixed;  
  bottom: 0px; 
  z-index: 1001;  
  text-align: center;
  background-color: #a1a1a1;
} 
.drawer_content_box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #a1a1a1;
}
.drawer_content{
  height: 100%;
  width: 100%;
  display:flex;
	flex-direction:row;
  justify-content: center;
  flex-wrap: wrap;
}
.drawer_content image{
  width: 100%;
  height: 100%;
}

.drawer_btn_block{
  width: 100%;
  align-items: center;
  justify-content: center;
  display:flex;
	flex-direction:row;
}
.drawer_btn_block button{
  height: 40px;
  line-height: 40px;
  margin-bottom: 5px;
}
.save-img{
  background-color: #2ba246;
  color: #FFFFFF;
}
.drawer_content_canvas{
  margin-top: 450px;
  width: 1305px;
  height: 1920px;
}

.drawer_content_canvas_abs{
  width: 1305px;
  height: 1920px;
  position: fixed;
  left: 100000px;
}

.hidden-view{
  display: none;
}
