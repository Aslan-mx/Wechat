/* pages/wxz/wxz.wxss */
Page{
  width: 100%;
  height: 100%;
  padding: 0rpx 15rpx;
  box-sizing: border-box;
}

.wraper{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.sum256{
  display:inline-block;
  width:38rpx;
  height:28rpx;
  margin: 0rpx;
}

view{
  padding: 0;
}
.timer{
  font-size: 30rpx;
  text-align:center;
  color: red;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.mask{
  width: 100vw;
  height: 100vh;
  position:fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.9);
}
.startModule{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 600rpx;
  height: 480rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-78%);
  border-radius: 12rpx;
}
.tiptext{
  margin-top: 10rpx;
  font-weight: bold;
  font-size: 34rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.ready{
  font-size: 30rpx;
}
.timeOut{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 600rpx;
  height: 400rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-78%);
  border-radius: 12rpx;
}
.result{
  font-size: 32rpx;
  font-weight: 700;

}
.result1{
  font-size: 32rpx;
}
.btn-view{
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.btn-view button{
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding:0rpx 20rpx;
}
.endMask{
    width: 100vw;
  height: 100vh;
  position:fixed;
  top: 0;
  left: 0;
  background-color: rgba(225, 225, 225, 0);
}

