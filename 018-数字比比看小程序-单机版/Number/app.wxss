Page {
  background-color: #3fb976;
  width: 100%;
  height:100%;
  overflow-x: hidden;
  overflow-y: hidden;
  border-radius: 0px;
}
.container {
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content: flex-start;
  box-sizing: border-box;
} 
.Grid {
  display:flex;
  -webkit-flex-direction:row;
