Page{
  background-color: #FFFFFF;
}

.container {
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: flex-start;
  padding-left: 10px;
} 
.item-view{
  width: 80%;
  margin-top: 30px;
  font-size: 18px;
  letter-spacing: 1px;
  color: #666666;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 30px;
  line-height: 30px;
}
.item-view image{
  margin-left: 5px;
  width: 30px;
  height: 30px;
}


.drawer_content_form{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.form-input{
  margin: 20px 0px;
  border: 1px solid #dddddd;
  height: 30px;
  width: 200px;
  border-radius: 5px;
  text-align: left;
  padding: 0px 5px;
  margin-left: 5px;
}
.drawer_content_bottom{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}