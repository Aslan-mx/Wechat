/* pages/canvas/canvas.wxss */
/*绘图view*/  
.drawer_content_box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.drawer_content{
   position: fixed;
  bottom: 0px;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.drawer_content_canvas{
  width: 1050px;
  height: 1770px;
}
.canvas-hide{
  position: absolute;
  top: -9999px;
}
.v-btn{
  display: flex;
  position: absolute;
  bottom:20rpx;
  width: 100%;

}

.v-btn button{
 background-color: #2a96b5;
 color:#fff;
 border-radius: 0;
 height: 82rpx;
 line-height: 82rpx;
}

 .footer {
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 100%;
  z-index: -10;
}

.footer image {
  width: 100%;
  height: 100%;
} 
